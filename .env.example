# 環境設定
ENVIRONMENT=dev
DEBUG=1

# Docker コンテナ名
API_CONTAINER_NAME=api
POSTGRES_CONTAINER_NAME=db
TEST_POSTGRES_CONTAINER_NAME=test_db
COV_CONTAINER_NAME=coverage

# API設定
API_HOST=0.0.0.0
API_PORT=8020
API_INTERNAL_PORT=8000

# PostgreSQL設定
POSTGRES_ROOT_PASSWORD=rootpassword
POSTGRES_DB=project_db
POSTGRES_USER=chrono_wiki_user
POSTGRES_PASSWORD=chrono_wiki_password
POSTGRES_PORT=5432
POSTGRES_INTERNAL_PORT=5432

# データベース接続URL
TEST_POSTGRES_DB=test_project_db
TEST_POSTGRES_USER=test_user
TEST_POSTGRES_PASSWORD=test_password
TEST_POSTGRES_PORT=5433
TEST_POSTGRES_INTERNAL_PORT=5432
# redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
TEST_REDIS_HOST=test_redis
TEST_REDIS_PORT=6379
TEST_REDIS_DB=0

# カバレッジサービスの設定
COV_PORT=8080
COV_INTERNAL_PORT=8080
# Git Configuration
GIT_AUTHOR_NAME=your_name
GIT_AUTHOR_EMAIL=your_email@example.com
GIT_COMMITTER_NAME=your_name
GIT_COMMITTER_EMAIL=your_email@example.com

API_KEY=dev_api_key

SECRET_KEY=your-super-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_RESET_TOKEN_EXPIRE_HOURS=1
# ログ設定
# LOG_LEVEL=INFO<WARNING<ERROR<CRITICAL
LOG_LEVEL=INFO
LOG_DIR=logs
SLOW_REQUEST_THRESHOLD=1.0

JWT_ISSUER=your-app-name
JWT_AUDIENCE=your-app-users

AWS_S3_BUCKET_NAME=your-s3-bucket-name
