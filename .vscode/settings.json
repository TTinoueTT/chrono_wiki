{
  "workbench.colorTheme": "Default Dark+",
  "workbench.colorCustomizations": {
    "[Default Dark+]": {
      "activityBar.activeBackground": "#a1cdff",
      "titleBar.activeBackground": "#009485",
      "titleBar.activeForeground": "#ffffff",
      "statusBar.background": "#242424",
      "statusBar.foreground": "#ffffff",
      "statusBar.noFolderBackground": "#242424"
    }
  },

  "editor.guides.bracketPairs": true,
  "editor.colorDecorators": true,

  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "string.quoted.double.python",
        "settings": {
          "foreground": "#c370d2"
        }
      },
      {
        "scope": "string.quoted.single.python",
        "settings": {
          "foreground": "#afa038"
        }
      }
    ]
  },
  
  // フォーマット設定
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": false,
  
  // PythonファイルのデフォルトフォーマッターをBlackに設定
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  
  // Blackフォーマッターの設定
  "black-formatter.args": ["--line-length=120"],
  "black-formatter.importStrategy": "fromEnvironment",
  "black-formatter.showNotifications": "onError",
  
  "editor.minimap.maxColumn": 30,
  "python.testing.unittestArgs": ["-v", "-s", ".", "-p", "*test.py"],
  "python.testing.pytestEnabled": false,
  "python.testing.unittestEnabled": true,
  "cSpell.words": [
    "asyncio",
    "autoflush",
    "httpx",
    "isort",
    "mypy",
    "poolclass",
    "pytest",
    "sessionmaker"
  ]
}
